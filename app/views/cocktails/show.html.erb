<h1><%= @cocktail.name %></h1>
<ul>
<% @cocktail.doses.each do |dose| %>
  <li><%= dose.description + " " + dose.ingredient.name %>
    <%= link_to "delete", cocktail_dose_path(@cocktail, dose), method: :delete %>
  </li>
</ul>
<% end %>

<h2>Add ingredient:</h2>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :description %>
  <%= f.input :ingredient, collection: Ingredient.all %>
  <%= f.submit "add dose", class: "btn btn-primary" %>
<% end %>

<hr>
<%= link_to "All cocktails", cocktails_path %>


